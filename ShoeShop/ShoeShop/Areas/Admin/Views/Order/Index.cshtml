@model IEnumerable<Models.EF.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách </h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>ID </th>
                           
                            <th>Id Nhân Viên</th>
                            <th>Tên</th>
                            <th>Sđt</th>
                            <th>Địa Chỉ</th>
                            <th>Email</th>
                            <th>Trạng Thái</th>
                            <th>Tổng Tiền</th>
                            <th>Chức Năng</th>

                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Id">
                                    <td>@item.Id</td>
                                    
                                    <td>@item.CustomerId</td>
                                    <td>@item.ShipName</td>
                                    <td>@item.ShipMobile</td>
                                    <td>@item.ShipAddress</td>
                                    <td>@item.ShipEmail</td>
                                    
                                    @{
                                        var i = @item.Status;
                                    }
                                    @if (i == 1)
                                    {

                                        <td>Đã Nhận</td>;
                                    }
                                    else if( i == 2)
                                    {
                                        <td>Đã Giao</td>
                                    }
                                    else if (i == 3)
                                    {
                                        <td>Hoàn Thành</td>
                                    }


                                    <td style="float: right">
                                        <a class="btn btn-primary " href="/Admin/Order/Edit/@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i> Sửa</a>

                                        <button class="btn btn-danger">
                                            @Ajax.ActionLink("Xóa", "Delete", new {@id = item.Id}, new AjaxOptions
                                            {
                                                Confirm = "Bạn có muốn xóa bản ghi này không?",
                                                OnComplete = "$('#row_" + @item.Id + "').remove()",
                                                HttpMethod = "Delete"
                                            }, new {@type = "submit", @class = "fa fa-trash-o", @style = "color: white"})
                                        </button>


                                    </td>
                                </tr>

                                        }

                        </tbody>
                        <div class="Button"><a class="btn btn-primary " href="/Admin/Order/Create"><i class="fa fa-pencil" aria-hidden="true"></i> Thêm Sản Phẩm</a></div>
                        <br/>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
